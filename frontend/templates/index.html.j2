{% extends "base.html.j2" %}

{% block title %}
  Here be dragons
{% endblock %}

{% block content %}
<p>
  <a href="{{ url('frontend.test') }}" class="btn btn-danger">TEST</a>
</p>
<p>
  <table class="table">
    <tr><th>Name</th><th>Pattern</th></tr>
    {% for p in patterns %}
      <tr><td>{{ p.name }}</td><td>{{ p.pattern }}</td></tr>
    {% endfor %}
  </table>
</p>
<p>
  <form method="POST">
    {{ csrf_input }}
    <label for="pushover-user">Pushover User Key</label>
    <input class="form-control" type="text" name="pushover-user" id="pushover-usr" value="{{ settings.pushover_user }}"/>
    <button type="submit" class="mt-1 btn btn-primary">Save</button>
  </form>
</p>
{% endblock %}
