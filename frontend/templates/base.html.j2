<html>
  <head>
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ static('frontend/css/bootstrap.min.css') }}">
  </head>
  <body>
    {% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">THWatch</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Foo</a>
          </li>
        </ul>
        <div class="ml-auto">
          {% if request.user.is_superuser %}
            <a class="btn btn-secondary" href="/admin">Admin</a>
          {% endif %}
          <a class="btn btn-secondary" href="{{ url('frontend.logout') }}">Log out {{ request.user }}</a>
        </div>
      </div>
    </nav>
    {% endblock %}
    <div class="container mt-4">
      {% block content %}{% endblock %}
    </div>
    <script src="{{ static('frontend/js/bootstrap.bundle.min.js') }}"></script>
  </body>
</html>
